<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#001330CE"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/verifyTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="Verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/verifyCodeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Verification Code"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyTxt" />

    <EditText
        android:id="@+id/otpN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:inputType="number"
        android:textColor="@color/white"
        android:hint="  "
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyCodeTxt"/>

    <EditText
        android:id="@+id/otpN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:hint="  "
        android:textColor="@color/white"
        android:inputType="number"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/otpN1"
        app:layout_constraintTop_toBottomOf="@+id/verifyCodeTxt" />

    <EditText
        android:id="@+id/otpN3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:hint="  "
        android:textColor="@color/white"
        android:inputType="number"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/otpN2"
        app:layout_constraintTop_toBottomOf="@+id/verifyCodeTxt" />

    <EditText
        android:id="@+id/otpN4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="  "
        android:textColor="@color/white"
        android:inputType="number"
        android:textColorHint="@color/white"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/otpN3"
        app:layout_constraintTop_toBottomOf="@+id/verifyCodeTxt" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="If you didn't recieve a code. Resend."
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpN2" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#BD2C2C"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="SEND"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>